<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical">

    <TextView
        android:id="@+id/teacherLoginText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Student Login"
        android:textSize="30sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username" />

    <EditText
        android:id="@+id/teacherUsernameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password" />

    <EditText
        android:id="@+id/teacherPasswordText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/studentAuthenticateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickStudentAuthenticate"
        android:text="Login" />

    <Button
        android:id="@+id/studentCreateAccountButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickStudentCreate"
        android:text="Create Account" />

    <Button
        android:id="@+id/studentBackButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickStudentBackToMain"
        android:text="Back" />
</LinearLayout>
